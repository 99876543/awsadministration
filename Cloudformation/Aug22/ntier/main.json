{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This is activity 1 to create vpc",
    "Parameters": {
        "zone1": {
            "Description": "select zone 1",
            "Type": "AWS::EC2::AvailabilityZone::Name"
        },
        "zone2": {
            "Description": "select zone 2",
            "Type": "AWS::EC2::AvailabilityZone::Name"
        }
    },
    "Resources": {
        "ntiervpc": {
            "Description": "This is ntier vpc",
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "192.168.0.0/16",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ntier"
                    }
                ]
            }
        },
        "subnet1": {
            "Description": "this is subnet1",
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": "192.168.0.0/24",
                "AvailabilityZone": {
                    "Ref": "zone1"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "subnet1"
                    }
                ],
                "VpcId": {
                    "Ref": "ntiervpc"
                }
            }
        },
        "subnet2": {
            "Description": "this is subnet2",
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": "192.168.1.0/24",
                "AvailabilityZone": {
                    "Ref": "zone2"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "subnet2"
                    }
                ],
                "VpcId": {
                    "Ref": "ntiervpc"
                }
            }
        },
        "subnet3": {
            "Description": "this is subnet3",
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": "192.168.2.0/24",
                "AvailabilityZone": {
                    "Ref": "zone1"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "subnet3"
                    }
                ],
                "VpcId": {
                    "Ref": "ntiervpc"
                }
            }
        },
        "subnet4": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "zone2"
                },
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "CidrBlock": "192.168.3.0/24",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "subnet4"
                    }
                ]
            }
        }
    }
}