{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This is activity 1 to create vpc",
    "Parameters": {
        "zone1": {
            "Description": "select zone 1",
            "Type": "AWS::EC2::AvailabilityZone::Name"
        },
        "zone2": {
            "Description": "select zone 2",
            "Type": "AWS::EC2::AvailabilityZone::Name"
        },
        "vpccidr": {
            "Description": "cidr of the vpc",
            "Type": "String",
            "Default": "192.168.0.0/16"
        },
        "subnet1cidr": {
            "Description": "cidr of subnet1",
            "Type": "String",
            "Default": "192.168.0.0/24"
        },
        "subnet2cidr": {
            "Description": "cidr of subnet2",
            "Type": "String",
            "Default": "192.168.1.0/24"
        },
        "subnet3cidr": {
            "Description": "cidr of subnet3",
            "Type": "String",
            "Default": "192.168.2.0/24"
        },
        "subnet4cidr": {
            "Description": "cidr of subnet4",
            "Type": "String",
            "Default": "192.168.3.0/24"
        }
    },
    "Resources": {
        "ntiervpc": {
            "Description": "This is ntier vpc",
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "vpccidr"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ntier"
                    }
                ]
            }
        },
        "subnet1": {
            "Description": "this is subnet1",
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": {
                    "Ref": "subnet1cidr"
                },
                "AvailabilityZone": {
                    "Ref": "zone1"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "subnet1"
                    }
                ],
                "VpcId": {
                    "Ref": "ntiervpc"
                }
            }
        },
        "subnet2": {
            "Description": "this is subnet2",
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": {
                    "Ref": "subnet2cidr"
                },
                "AvailabilityZone": {
                    "Ref": "zone2"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "subnet2"
                    }
                ],
                "VpcId": {
                    "Ref": "ntiervpc"
                }
            }
        },
        "subnet3": {
            "Description": "this is subnet3",
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": {
                    "Ref": "subnet3cidr"
                },
                "AvailabilityZone": {
                    "Ref": "zone1"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "subnet3"
                    }
                ],
                "VpcId": {
                    "Ref": "ntiervpc"
                }
            }
        },
        "subnet4": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "zone2"
                },
                "VpcId": {
                    "Ref": "ntiervpc"
                },
                "CidrBlock": {
                    "Ref": "subnet4cidr"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "subnet4"
                    }
                ]
            }
        }
    }
}